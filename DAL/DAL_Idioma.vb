Imports System.Data
Imports System.Data.SqlClient
Public Class DAL_Idioma
    Private _usuarioActual As BE.BE_Usuario = BE.BE_SesionActual.ObtenerInstancia.ObtenerUsuarioActual()
    Public Function Listar() As List(Of BE.BE_Idioma)
        Dim idiomas As List(Of BE.BE_Idioma) = New List(Of BE.BE_Idioma)
        Dim DAL_Acceso As DAL.DAL_Acceso = New DAL.DAL_Acceso
        Dim BE_Bitacora As BE.BE_Bitacora = New BE.BE_Bitacora
        Dim DAL_Bitacora As DAL_Bitacora = New DAL_Bitacora

        Try

            Dim tabla As DataTable = DAL_Acceso.Leer("Idioma_listar")

            For Each registro As DataRow In tabla.Rows

                Dim i As BE.BE_Idioma = New BE.BE_Idioma
                i.Codigo = registro("Codigo").ToString
                i.Nombre = registro("Nombre").ToString

                idiomas.Add(i)

            Next

        Catch ex2 As ArgumentNullException

            BE_Bitacora.FechaHora = DateTime.Now
            BE_Bitacora.Usuario = _usuarioActual
            BE_Bitacora.Descripcion = "Cadena de conexión inválida: " & ex2.ToString()
            BE_Bitacora.EsError = True
            DAL_Bitacora.ActualizarBitacora(BE_Bitacora)
        Catch ex1 As SqlClient.SqlException

            BE_Bitacora.FechaHora = DateTime.Now
            BE_Bitacora.Usuario = _usuarioActual
            BE_Bitacora.Descripcion = "Error al listar los idiomas: " & ex1.ToString()
            BE_Bitacora.EsError = True
            DAL_Bitacora.ActualizarBitacora(BE_Bitacora)
        Catch ex As Exception
            BE_Bitacora.FechaHora = DateTime.Now
            BE_Bitacora.Usuario = _usuarioActual
            BE_Bitacora.Descripcion = "Error al listar los idiomas: " & ex.ToString()
            BE_Bitacora.EsError = True
            DAL_Bitacora.ActualizarBitacora(BE_Bitacora)
        End Try

        Return idiomas

    End Function
    Public Function AgregarIdioma(ByVal idioma As BE.BE_Idioma) As Boolean

